# Application
APP_NAME=SampleTok
APP_VERSION=0.1.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ENVIRONMENT=development

# API
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Database
DATABASE_URL=postgresql+asyncpg://sampletok:sampletok@localhost:5432/sampletok
DATABASE_ECHO=False

# Inngest (optional - leave blank for local development)
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# Storage (S3 or R2)
STORAGE_TYPE=s3  # or "r2" for Cloudflare R2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=sampletok-samples
S3_ENDPOINT_URL=  # Leave empty for AWS S3, set for R2

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# TikTok Processing
MAX_VIDEO_DURATION_SECONDS=300
MAX_CONCURRENT_DOWNLOADS=5
DOWNLOAD_TIMEOUT_SECONDS=60

# Audio Processing
AUDIO_SAMPLE_RATE=48000
AUDIO_BIT_DEPTH=24
MP3_BITRATE=320
WAVEFORM_WIDTH=800
WAVEFORM_HEIGHT=140